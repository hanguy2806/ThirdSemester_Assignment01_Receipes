@model  Recipe
<div asp-validation-summary="All"></div>
<input type="hidden" asp-for="Id" />
<div class="row">
    <div class="col-25">
        <label asp-for="Name">Name: </label>
    </div><div class="col-75">
        <input asp-for="Name" />
    </div>
</div>
<div class="row">
    <div class="col-25">
        <label asp-for="Description">Description: </label>
    </div><div class="col-75">
        <textarea asp-for="Description"></textarea>
    </div>
</div>
<div class="row">
    <div class="col-25">
        <label asp-for="Ingredient">Ingredient: </label>
    </div><div class="col-75">
        <textarea asp-for="Ingredient"></textarea>
    </div>
</div>
<div class="row">
    <div class="col-25">
        <label asp-for="CookingSteps">Cooking:</label>
    </div>
    <div class="col-75">
    </div>
</div>

