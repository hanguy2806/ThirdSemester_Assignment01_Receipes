@model IEnumerable<Assignment01_Receipes.Models.Recipe>
@{
    Layout = "_BasicLayout";
    ViewBag.Title = "Recipe List";
}
<h1>List of Recipe</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Give Feedback</th>
        </tr>
    </thead>
    <tbody>
       
        @foreach (Assignment01_Receipes.Models.Recipe r in Model)
        {         
    <tr>        
        <th>@r.ID</th>
        <td>@r.Name</td>
        <td>
            <a class="btn btn-block btn-secondary"
               asp-action="ViewRecipe"
               asp-controller="Home"
               asp-route-category="@r.ID">
                Detail
            </a>
        </td>
        <td>
            <a class="btn btn-block btn-secondary"
               asp-action="ReviewRecipe"
               asp-controller="Home"
               asp-route-category="@r.ID">
                Review
            </a>
        </td>

    </tr>
        }
    </tbody>
</table>
<a asp-action="Index">Back</a>
